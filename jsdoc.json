{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include":["src"],
        "exclude":["src/lib"],
        "includePattern": ".+\\.js$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [ "plugins/markdown"],
    "opts": {
        "encoding": "utf8",               
        "destination": "./doc/",        
        "recurse": true,
        "readme" :"README.md",
        "template":"./node_modules/ink-docstrap/template"
    },
    "templates": {
        "systemName"            : "PigeonGL",
        "copyright"             :  "@mizy.mz",
        "theme"                 : "readable",
        "linenums"              : true,
        "collapseSymbols"       : true,
        "inverseNav"            : true,
        "outputSourceFiles"     : true ,
        "outputSourcePath"      : true,
        "syntaxTheme"           : "dark",
        "sort"					: "since",
        "search"                : true 
    }
}